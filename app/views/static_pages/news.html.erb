<% provide(:title, "News") %>
<p id="notice"><%= notice %></p>

<div class="center jumbotron">
	<h1>Listing Articles</h1>

	<table>


  	<tbody>
  	  <% @articles.each do |article| %>
					<div class="center jumbotron">
  	      <p><%= article.title %></p>
  	      <h2><%= article.date %></h2>
  	      <td><%= link_to 'Show Article', article, class: 'btn btn-default center' %></td>
  	      </div>
  	  <% end %>
  	  </div>
  	</tbody>
	</table>
	<br>
</div>
